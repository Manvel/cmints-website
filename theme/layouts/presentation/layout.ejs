<!doctype html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<% include ../partials/meta %>

		<link rel="stylesheet" href="presentation/reveal/css/reveal.css">
		<link rel="stylesheet" href="presentation/reveal/css/theme/white.css">

		<!-- Theme used for syntax highlighting of code -->
		<link rel="stylesheet" href="presentation/reveal/lib/css/zenburn.css">

		<link rel="stylesheet" href="css/presentation/index.css">
		<% include ../partials/analytics %>
	</head>
	<body>
		<div class="reveal">
			<div class="slides">
				<%- body %>
				<% include index %>
			</div>
		</div>

		<script src="presentation/reveal/lib/js/head.min.js"></script>
		<script src="presentation/reveal/js/reveal.js"></script>

		<script>
			// More info about config & dependencies:
			// - https://github.com/hakimel/reveal.js#configuration
			// - https://github.com/hakimel/reveal.js#dependencies
			Reveal.initialize({
				dependencies: [
					{ src: 'presentation/reveal/plugin/markdown/marked.js' },
					{ src: 'presentation/reveal/plugin/markdown/markdown.js' },
					{ src: 'presentation/reveal/plugin/notes/notes.js', async: true },
					{ src: 'presentation/reveal/plugin/highlight/highlight.js', callback: function() { hljs.initHighlightingOnLoad(); } }
				]
			});
			Reveal.configure({ history: true });
		</script>
		<script src="presentation/index.js"></script>
	</body>
</html>
