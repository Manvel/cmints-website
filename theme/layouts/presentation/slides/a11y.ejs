<section id="lang-attribute">
  <h3>lang attribute</h3>
  <p>Declares default language of the document</p>
  <p>
    <pre><code>
    &lt;html lang="de">&lt;/html>
    </code></pre>
  </p>
</section>

<section id="hreflang">
  <h3>hreflang</h3>
  <pre class="fragment fade-up"><code>
  <a href="/de/documentation" hreflang="de">Dokumentation</a>
  <a href="http://devdays.lt/" hreflang="en">Address</a>
  </code></pre>
  <pre class="fragment fade-up"><code>
  a[hreflang]:after
  {
    content: "["attr(hreflang)"]"; 
    color: #999;
    vertical-align: super;
    font-size: 50%;
  }
    </code></pre>
  <p class="fragment fade-up show-hreflang">
    <a href="/de/documentation" hreflang="de">Dokumentation</a><br>
    <a href="http://devdays.lt/" hreflang="en">Address</a>
  </p>
</section>

<section id="accept-language">
  <h3>Accept-Language header</h3>
  <pre class="fragment fade-up"><code>
  Accept-Language : en-US,en;q=0.9,ru-RU;q=0.8,ru;q=0.7,
                    hy-AM;q=0.6,hy;q=0.5
  </code></pre>
  <p class="fragment fade-up"><code>q</code> - Weight of the locale</p>
</section>
