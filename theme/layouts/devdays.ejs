<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

		<title>reveal.js</title>

		<link rel="stylesheet" href="devdays/reveal/css/reveal.css">
		<link rel="stylesheet" href="devdays/reveal/css/theme/white.css">

		<!-- Theme used for syntax highlighting of code -->
		<link rel="stylesheet" href="devdays/reveal/lib/css/zenburn.css">

	</head>
	<body>
		<div class="reveal">
			<div class="slides">
        <%- body %>
			</div>
		</div>

		<script src="devdays/reveal/lib/js/head.min.js"></script>
		<script src="devdays/reveal/js/reveal.js"></script>

		<script>
			// More info about config & dependencies:
			// - https://github.com/hakimel/reveal.js#configuration
			// - https://github.com/hakimel/reveal.js#dependencies
			Reveal.initialize({
				dependencies: [
					{ src: 'devdays/reveal/plugin/markdown/marked.js' },
					{ src: 'devdays/reveal/plugin/markdown/markdown.js' },
					{ src: 'devdays/reveal/plugin/notes/notes.js', async: true },
					{ src: 'devdays/reveal/plugin/highlight/highlight.js', async: true, callback: function() { hljs.initHighlightingOnLoad(); } }
				]
			});
		</script>
	</body>
</html>
