<section id="i18n-strings">
  <h3>Translation strings</h3>
  <div class="removable">
    <p class="fragment fade-up">String ID</p>
    <p class="fragment fade-up">Description</p>
    <p class="fragment fade-up">Message/Text</p>
  </div>
  <pre class="fragment fade-up" data-queue="remove-removable"><code>
  /* /en/menu/header.json */
  {
    "menu-item-about": {
      "description": "Menu item label located in the header",
      "message": "About us"
    }
  }
  </code></pre>
  <pre class="fragment fade-up" data-queue="remove-removable" data-dequeue="true"><code>
  /* /ru/menu/header.json */
  {
    "menu-item-about": {
      "description": "Menu item label located in the header",
      "message": "О нас"
    }
  }
  </code></pre>
</section>

